# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  lane :tests do
    run_tests(workspace: "Example/PrimerSDK.xcworkspace",
              scheme: "PrimerSDK_Tests")
  end

  lane :ui_tests do
    run_tests(workspace: "Example/PrimerSDK.xcworkspace",
              devices: ["iPhone SE", "iPhone 8"],
              scheme: "PrimerSDKExample_UITests")
  end

  lane :danger_check do

    danger(
      danger_id: "check_on_all_prs",
      dangerfile: "Dangerfile",
      github_api_token: ENV["GITHUB_TOKEN"],
      verbose: true,
      remove_previous_comments: true
    )

  end

  lane :qa_release do

    appetize_api_token = ENV['APPETIZE_API_TOKEN']
    sdk_version_name = ENV['SOURCE_BRANCH']

    # cocoapods(
    #   clean_install: true,
    #   podfile: "./Example/Podfile"
    # )

    # Set version number
    # increment_version_number(
    #   version_number: sdk_version_name,
    #   xcodeproj: "./Example/PrimerSDK.xcodeproj"
    # )

    github_run_id = ENV["GITHUB_RUN_ID"]
    github_run_number = ENV["GITHUB_RUN_NUMBER"]

    increment_build_number(
      build_number: "#{github_run_id}.#{github_run_number}",
      xcodeproj: "./Example/PrimerSDK.xcodeproj"
    )

    create_keychain(
      name: ENV["MATCH_KEYCHAIN_NAME"],
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: true
    )

    match(
      type: "development",
      readonly: true,
      keychain_name: ENV["MATCH_KEYCHAIN_NAME"],
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
    )

    # Build for browserstack
    build_app(
      scheme: "PrimerSDK-Example",
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      include_bitcode: false,
      export_method: "development",
      skip_package_dependencies_resolution: true
    )

    # Upload to Browserstack
    upload_to_browserstack_app_automate(
      browserstack_username: ENV["BROWSERSTACK_USERNAME"],
      browserstack_access_key: ENV["BROWSERSTACK_ACCESS_KEY"],
      file_path: ENV["IPA_OUTPUT_PATH"]
    )

    # Build for appetize
    build_app(
      scheme: "PrimerSDK-Example",
      sdk: "iphonesimulator", # Appetize needs a simulator app
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      export_method: "development",
      archive_path: "/var/tmp/PrimerSDK_Example.xcarchive",
      # Build speed optimisation
      skip_package_ipa: true,
      skip_package_pkg: true,
      skip_package_dependencies_resolution: true
    )

    # Appetize needs the .app to be zipped
    zip(
      path: "/var/tmp/PrimerSDK_Example.xcarchive/Products/Applications/PrimerSDK_Example.app",
      output_path: "./PrimerSDK_Example.zip",
      symlinks: true
    )

    # Find public key of appetize
    uri = URI('https://livedemostore.primer.io/appetize/ios/preview_' + sdk_version_name)
    public_key = Net::HTTP.get(uri)
    puts "public_key: " + public_key

    # Upload to Appetize
    appetize(
      path: "./PrimerSDK_Example.zip",
      platform: "ios",
      api_token: appetize_api_token,
      public_key: public_key,
      note: sdk_version_name
    )

    # Utilize the firebase client token to store in CI

    #
    # # Upload to Firebase
    # firebase_app_distribution(
    #   service_credentials_file: "firebase_credentials.json",
    #   app: "1:1024117832450:ios:d8c2e74c66341d8cf3201b",
    #   groups: "primer-internal",
    #   release_notes: "QA release: " + sdk_version_name + " [" + str_time + "]"
    # )

  end

  lane :release do
    puts "Testing"
    puts "SOURCE_TAG: #{ENV['SOURCE_TAG']}"
    time = Time.new
    str_time = time.strftime("%Y-%m-%d %H:%M:%S")
    # Set timestamp as version_code to differentiate builds in firebase
    build_number = time.to_i

    appetize_api_token = ENV['APPETIZE_API_TOKEN']
    sdk_version_name = ENV['SOURCE_TAG']

    # cocoapods(
    #   clean_install: true,
    #   podfile: "./Example/Podfile"
    # )

    # Set version number
    increment_version_number(
      version_number: sdk_version_name,
      xcodeproj: "./Example/PrimerSDK.xcodeproj"
    )

    increment_build_number(
      build_number: build_number,
      xcodeproj: "./Example/PrimerSDK.xcodeproj"
    )

    create_keychain(
      name: ENV["MATCH_KEYCHAIN_NAME"],
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: true
    )

    match(
      type: "development",
      readonly: true,
      keychain_name: ENV["MATCH_KEYCHAIN_NAME"],
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
    )

    # Build for appetize
    build_app(
      scheme: "PrimerSDK-Example",
      sdk: "iphonesimulator", # Appetize needs a simulator app
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      export_method: "development",
      archive_path: "/var/tmp/PrimerSDK_Example.xcarchive",
      # Build speed optimisation
      skip_package_ipa: true,
      skip_package_pkg: true,
      skip_package_dependencies_resolution: true
    )

    # Appetize needs the .app to be zipped
    zip(
      path: "/var/tmp/PrimerSDK_Example.xcarchive/Products/Applications/PrimerSDK_Example.app",
      output_path: "./PrimerSDK_Example.zip",
      symlinks: true
    )

    # Find public key of appetize
    uri = URI('https://livedemostore.primer.io/appetize/ios/' + sdk_version_name)
    public_key = Net::HTTP.get(uri)
    puts "public_key: " + public_key

    # Upload to Appetize
    appetize(
      path: "./PrimerSDK_Example.zip",
      platform: "ios",
      api_token: appetize_api_token,
      public_key: public_key,
      note: sdk_version_name
    )

    # Build for firebase
    build_app(
      scheme: "PrimerSDK-Example",
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      export_method: "development",
      # Build speed optimisation
      skip_package_pkg: true,
      skip_package_dependencies_resolution: true
    )

    # Firebase
    firebase_app_distribution(
      service_credentials_file: "firebase_credentials.json",
      app: "1:1024117832450:ios:d8c2e74c66341d8cf3201b",
      groups: "primer-internal",
      release_notes: "PR: " + sdk_version_name + " [" + str_time + "]"
    )

  end

  lane :preview do
    time = Time.new
    str_time = time.strftime("%Y-%m-%d %H:%M:%S")

    # Set timestamp as version_code to differentiate builds in firebase
    build_number = time.to_i

    appetize_api_token = ENV['APPETIZE_API_TOKEN']
    pr_number = ENV["PR_NUMBER"]
    if(!pr_number) then
        puts "NO PR NUMBER"
        next
    end

    puts "PR_NUMBER: " + pr_number
    version_name = "preview-" + pr_number

    # cocoapods(
    #   clean_install: true,
    #   podfile: "./Example/Podfile"
    # )

    # # Set version number
    # increment_version_number(
    #   version_number: version_name,
    #   xcodeproj: "./Example/PrimerSDK.xcodeproj"
    # )

    increment_build_number(
      build_number: build_number,
      xcodeproj: "./Example/PrimerSDK.xcodeproj"
    )

    create_keychain(
      name: ENV["MATCH_KEYCHAIN_NAME"],
      password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: true
    )

    match(
      type: "development",
      readonly: true,
      keychain_name: ENV["MATCH_KEYCHAIN_NAME"],
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
    )

    # Build for browserstack
    build_app(
      scheme: "PrimerSDK-Example",
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      include_bitcode: false,
      export_method: "development",
      skip_package_dependencies_resolution: true
    )

    # Upload to Browserstack
    upload_to_browserstack_app_automate(
      browserstack_username: ENV["BROWSERSTACK_USERNAME"],
      browserstack_access_key: ENV["BROWSERSTACK_ACCESS_KEY"],
      file_path: ENV["IPA_OUTPUT_PATH"]
    )

    # Build for appetize
    build_app(
      scheme: "PrimerSDK-Example",
      sdk: "iphonesimulator", # Appetize needs a simulator app
      workspace: "./Example/PrimerSDK.xcworkspace",
      configuration: "Debug",
      export_method: "development",
      archive_path: "/var/tmp/PrimerSDK_Example.xcarchive",
      # Build speed optimisation
      skip_package_ipa: true,
      skip_package_pkg: true,
      skip_package_dependencies_resolution: true
    )

    # Appetize needs the .app to be zipped
    zip(
      path: "/var/tmp/PrimerSDK_Example.xcarchive/Products/Applications/PrimerSDK_Example.app",
      output_path: "./PrimerSDK_Example.zip",
      symlinks: true
    )

    # Find public key of appetize
    uri = URI('https://livedemostore.primer.io/appetize/ios/preview_' + sdk_version_name)
    public_key = Net::HTTP.get(uri)
    puts "public_key: " + public_key

    # Upload to Appetize
    appetize(
      path: "./PrimerSDK_Example.zip",
      platform: "ios",
      api_token: appetize_api_token,
      public_key: public_key,
      note: sdk_version_name
    )

    # Utilize the firebase client token to store in CI

    #
    # # Upload to Firebase
    # firebase_app_distribution(
    #   service_credentials_file: "firebase_credentials.json",
    #   app: "1:1024117832450:ios:d8c2e74c66341d8cf3201b",
    #   groups: "primer-internal",
    #   release_notes: "QA release: " + sdk_version_name + " [" + str_time + "]"
    # )

  end

  desc 'Create simulator compatible .app file'
  lane :create_simulator_app do

    Dir.mktmpdir do |dir|

      build_app(
        scheme: "PrimerSDK-Example",
        workspace: "./Example/PrimerSDK.xcworkspace",
        configuration: "Debug",
        export_method: "development",
        # Build speed optimisation
        skip_package_pkg: true,
        skip_package_dependencies_resolution: true
      )

      build_ios_app(
        scheme: scheme_name,
        workspace: xcworkspace_path,
        configuration: build_configuration,
        codesigning_identity: ENV['CODESIGNING_IDENTITY'],
        destination: "generic/platform=iOS Simulator",
        sdk: "iphonesimulator",
        xcargs: "SYMROOT=#{dir}",
        skip_package_ipa: true,
        skip_archive: true,
        skip_package_dependencies_resolution: true
      )

    end

  end

end
